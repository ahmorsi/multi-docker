{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name":"client",
            "image": "ahmorsi/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name":"server",
            "image": "ahmorsi/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name":"worker",
            "image": "ahmorsi/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name":"nginx",
            "image": "ahmorsi/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        }
    ]
}